<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.fzf.game.mapper.CommentMapper">
  <resultMap id="BaseResultMap" type="com.fzf.game.domain.entity.Comment">
    <!--@mbg.generated-->
    <id column="comment_id" jdbcType="INTEGER" property="commentId" />
    <result column="uid" jdbcType="INTEGER" property="uid" />
    <result column="article_id" jdbcType="INTEGER" property="articleId" />
    <result column="content" jdbcType="LONGVARCHAR" property="content" />
    <result column="creat_time" jdbcType="TIMESTAMP" property="creatTime" />
    <result column="is_delete" jdbcType="INTEGER" property="isDelete" />
  </resultMap>
  <resultMap id="BaseAndUser" type="CommentVo" extends="BaseResultMap">
    <association property="user"
                 resultMap="com.fzf.game.mapper.UserMapper.BaseResultMap"/>
  </resultMap>

  <sql id="Base_Column_List">
    <!--@mbg.generated-->
    comment_id, `uid`, article_id, content, creat_time, is_delete
  </sql>

  <insert id="saveComment">
    INSERT INTO comment(uid,article_id,content)
    VALUES (#{uid},#{articleId},#{content})
  </insert>

  <update id="deleteComment">
    UPDATE comment SET is_delete = 1
    WHERE comment_id = #{commentId}
  </update>

  <select id="findCommentByArticleId" resultMap="BaseAndUser">
    SELECT comment_id,u.user_name,content,creat_time
    FROM comment INNER JOIN user u ON comment.uid = u.uid
    WHERE article_id = #{articleId}
  </select>


</mapper>